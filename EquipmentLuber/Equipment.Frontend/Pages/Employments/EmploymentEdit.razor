@page "/employment/edit/{EmploymentId:int}"

<h3>Editar Puesto</h3>
@if (employment is null)
{
    <Loading />
}
else
{
    <FormWithName @ref="employmentForm"
                  Label="Puestos"
                  Model="employment"
                  OnValidSubmint="UpdateAsync"
                  ReturnAction="Return" />
}